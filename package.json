{
  "name": "smartlook-react-native-wrapper",
  "version": "0.40.0",
  "description": "React native wrapper for Smartlook SDK",
  "homepage": "https://www.smartlook.com/",
  "keywords": [
    "react-native",
    "smartlook",
    "android",
    "ios",
    "recording",
    "analytics"
  ],
  "author": "",
  "license": "",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "src/index.ts",
  "types": "lib/typescript/index.d.ts",
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "watch": "nodemon --watch src -e js,ts,tsx,json --exec yarn prepare",
    "test": "jest",
    "testcoverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/runtime": "^7.10.3",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/react-native": "^0.64.2",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "jest-html-reporter": "^3.3.0",
    "metro-react-native-babel-preset": "^0.64.0",
    "nodemon": "^2.0.7",
    "react": "17.0.1",
    "react-native": "^0.64.0",
    "react-native-builder-bob": "^0.18.1",
    "typescript": "^4.1.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "smartlook-react-native-bridge.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ],
    "files": [
      "src/"
    ]
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/testSetup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "watchPathIgnorePatterns": [
      "__fixtures__\\/[^/]+\\/(output|error)\\.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native)/)"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier",
      "plugin:jest/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "useTabs": true,
          "singleQuote": true,
          "trailingComma": "all",
          "printWidth": 120
        }
      ],
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "coverage/"
  ]
}